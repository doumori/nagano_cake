<h2>注文履歴詳細</h2>
  <table class="table table-inverse">
      <thead>
        <tr>
          <th>注文日</th>
          <td><%= @order.updated_at.strftime("%Y-%m-%d %H:%M") %></td>
        </tr>
        <tr>
          <th>配送先</th>
          <td><%= @order.ship_postcode %></td>
        </tr>
        <tr>
          <th>支払方法</th>
          <td><%= @order.pay_method %></td>
        </tr>
        <tr>
          <th>ステータス</th>
          <td><%= @order.status %></td>
        </tr>
      </thead>
  </table>

  <table class="table table-hover table-inverse">
    <thead>
      <tr>
        <th>商品</th>
        <th>単価（税込）</th>
        <th>個数</th>
        <th>小計</th>
      </tr>
    </thead>
    <tbody>
      <tr>
        <td><%= @order_item.item.name %> </td>
        <td><%= @order_item.price %> </td>
        <td><%= @order_item.quantity %> </td>
        <td><%= (@order_item.price) * (@order_item.quantity).to_i %> </td>
      </tr>
    </tbody>
  </table>

<table class="table table-inverse">
  <thead>
    <tr>
      <th>商品合計</th>
      <td><%= @order.total %></td>
    </tr>
    <tr>
      <th>配送料</th>
      <td><%= @order.freight %></td>
    </tr>
    <tr>
      <th>御請求額</th>
      <td><%= @order.total + @order.total %></td>
    </tr>
  </thead>
</table>