<div class="container">
  <div class="row">
    <h3 class="col-xs-offset-2 col-xs-3">マイページ</h3>
  </div>
  <div class="row">
    <tr>
      <td><h4 class="col-xs-2">登録情報</h4></td>
      <td>
        <%= link_to "編集する", edit_customer_path(current_customer), class: "btn btn-primary" %>
      </td>
      <td>
        <%= link_to "パスワードを変更する", edit_password_path(current_customer), class: "btn btn-primary" %>
      </td>
    </tr>
  </div>
  <div class="row">
    <table class="table">
      <tr>
        <th><h4>氏名</h4></th>
        <th><%= current_customer.last_name %> <%= current_customer.first_name %></th>
      </tr>
      <tr>
        <th><h4>カナ</h4></th>
        <th><%= current_customer.last_name_kana %> <%= current_customer.first_name_kana %></th>
      </tr>
      <tr>
        <th><h4>郵便番号</h4></th>
        <th><%= current_customer.post_code %></th>
      </tr>
      <tr>
        <th><h4>住所</h4></th>
        <th><%= current_customer.address %></th>
      </tr>
      <tr>
        <th><h4>電話番号</h4></th>
        <th><%= current_customer.phone_number %></th>
      </tr>
      <tr>
        <th><h4>メールアドレス</h4></th>
        <th><%= current_customer.email %></th>
      </tr>
    </table>
  </div>
  <div class="row">
    <tr>
      <td><h4 class="col-xs-2">配送先</h4></td>
      <td><%= link_to "一覧を見る", ships_path, class: "btn btn-primary" %></td>
    </tr>
  </div>
  <div class="row">
    <tr>
      <td><h4 class="col-xs-2">注文履歴</h4></td>
      <td><%= link_to "一覧を見る", orders_path, class: "btn btn-primary" %></td>
    </tr>
  </div>
</div>