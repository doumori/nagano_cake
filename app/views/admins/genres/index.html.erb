<p>ジャンル</p>
<%= form_with(model:@genre,url:admins_genres_path) do |f| %>

		<%= f.radio_button :active,:female %>
		<%= f.label :is_active, "有効", {value: :male, style: "display: inline-block;"} %>
		<%= f.radio_button :active,:female %>
		<%= f.label :is_active, "無効", {value: :male, style: "display: inline-block;"} %>
		<%= f.text_field :name %>

		<%= f.submit class: "btn btn-primary col-xs-12" %>
	</div>
<% end %>
<table>
<thead>
				<tr>
					<th>ジャンル</th>
					<th>状態</th>
					<th colspan="1"></th>
				</tr>
			</thead>
			<tbody>
				<% @genres.each do |genre| %>
				<tr>
					<td><%= genre.name %></td>
					<td><%= genre.is_active %></td>
					<td><%= link_to '編集',edit_admins_genre_path(genre) %></td>
				</tr>
				<% end %>
			</tbody>
		</table>
