<div class="container">
	<h2>商品 詳細画面</h2>
	<div class="row">
		<div class="col-xs-6">
			<%= attachment_image_tag @item, :image, size: '300x200',format: "jpeg" %>
		</div>
		<div class="col-xs-6">
			<table class="table table-borderless">
				<tr>
					<th>商品名</th><td><%= @item.name %></td>
				</tr>
				<tr>
					<th>商品説明文</th><td><%= @item.description %></td>
				</tr>
				<tr>
					<th>ジャンル</th><td><%= @item.genre.name %></td>
				</tr>
				<tr>
					<th>税抜き価格</th><td><%= @item.price %>(<%= @tax.floor %>)円</td>
				</tr>
				<tr>
					<th>販売ステータス</th>
					<td><%= @item.is_sale_status  == false ? "販売停止中" : "販売中"%></td>
				</tr>
			</table>
		</div>
		<div class="row">
			<%= link_to '編集する',edit_admins_item_path(@item), class: " btn btn-primary pull-right" %>
		</div>
	</div>
</div>
