<h1>注文一覧画面</h1>

	<table class="table table-hover table-inverse">
			<thead>
				<tr>
					<th>購入日時</th>
					<th>購入者一覧</th>
					<th>注文個数</th>
					<th>注文ステータス</th>
				</tr>
			</thead>

			<tbody>
				<% @orders.each do |order| %>
				<tr>
					<td><%= link_to order.updated_at,admins_order_path(order.id) %></td>
					<td><%= order.customer.last_name+order.customer.first_name %></td>
					<td><%= order.order_items.count %></td>
					<td><%= order.status %></td>
				</tr>
				<% end %>
			</tbody>
		</table>
