<h1>注文一覧画面</h1>

	<table class="table table-hover table-inverse">
			<thead>
				<tr>
					<th>購入日時</th>
					<th>購入者一覧</th>
					<th>注文個数</th>
					<th>注文ステータス</th>
				</tr>
			</thead>
			<tbody>
				<% @orders.each do |order| %>
				<tr>
					<td><%= order.updated_at.strftime("%Y/%m/%d %H:%M") %></td>
					<td><%= order.customer %></td>
					<th><%= order.order_items.count %></th>
					<td><%= order.status %></td>
					
				</tr>
				<% end %>
			</tbody>
		</table>
