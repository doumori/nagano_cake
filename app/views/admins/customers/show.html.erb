<div class="container">
	<h2>会員詳細画面</h2>
			<table class="table table-hover table-inverse">
				<tr>
	    		<th>顧客ID</th>
	    		<td><%= @customer.id %></td>
	    		<td>
	    				<% if @customer.is_member_status == false %>
	    				<span class="btn-success">有効会員</span>
	    				<% else %>
	    				<span class="btn-danger">退会済み</span>
	    				<% end %>
	    		</td>
	  		</tr>
				<tr>
	    		<th>氏名</th><td><%= @customer.last_name %><%= @customer.first_name %></td>
	  		</tr>
				<tr>
			    <th>フリガナ</th><td><%= @customer.last_name_kana %><%= @customer.first_name_kana %></td>
			  </tr>
				<tr>
			    <th>郵便番号</th><td><%= @customer.post_code %></td>
			  </tr>
				<tr>
			    <th>住所</th><td><%= @customer.address %></td>
			  </tr>
				<tr>
			    <th>電話番号</th><td><%= @customer.phone_number %></td>
			  </tr>
				<tr>
			    <th>メールアドレス</th><td><%= @customer.email %></td>
			  </tr>

			</table>

		<%= link_to "編集する", edit_admins_customer_path ,class: "btn btn-primary"%>

		<%= link_to "注文一覧履歴を見る", admins_customers_path ,class: "btn btn-primary"%>
</div>
