
<div class="col-xs-12">
<h2>会員一覧画面</h2>
		<table class="table table-hover table-inverse ">
			<thead>
				<tr>
					<th>会員ID</th>
					<th>氏名</th>
					<th>メールアドレス</th>
					<th>ステータス</th>
				</tr>
			</thead>

			<tbody>
				<% @customers.each do |customer| %>
				<tr>
					<td><%= customer.id %></td>
					<td><%= link_to customer.last_name, admins_customer_path(customer.id) %></td><!--顧客リンク追加-->
					<td><%= customer.email %></td>
					<td><%= customer.is_member_status %></td>
				</tr>
				<% end %>
			</tbody>
		</table>
</div>
