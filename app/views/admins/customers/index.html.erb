
<div class="col-xs-12">
<h2>会員一覧画面</h2>
		<table class="table table-hover">
			<thead class="thead-lignt">
				<tr>
					<th>会員ID</th>
					<th>氏名</th>
					<th>メールアドレス</th>
					<th>ステータス</th>
				</tr>
			</thead>

			<tbody>
				<% @customers.each do |customer| %>
				<tr>
					<td><%= customer.id %></td>
					<td>
						<%= link_to (customer.last_name+customer.first_name), admins_customer_path(customer.id) %>
					</td>
					<td><%= customer.email %></td>
					<td><%= customer.is_member_status  == false ? "有効会員" : "退会済み"%></td><!--三項演算子(条件演算子）を使ってif文を記述-->
				</tr>
				<% end %>
			</tbody>
		</table>
</div>
