<!DOCTYPE html>
<html>
  <head>
    <title>NaganoCake</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all' %>
    <%= javascript_include_tag 'application' %>
        <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css">
    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
     <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js"></script>
  </head>

  <body>

    <% if admin_signed_in? %>

      <header class="navbar navbar-fixed-top">
        <div class="container">
            <nav class="nav navbar-nav navbar-left">
                <span>LOGO</span>
            </nav>
            <nav>
                <ul class="nav navbar-nav navbar-right">
                    <li><%= link_to ' 商品一覧', admins_items_path %></li>

                    <li><%= link_to ' 会員一覧', admins_customers_path %></li>

                    <li><%= link_to ' 注文履歴一覧', admins_orders_path, class: 'glyphicon glyphicon-user users' %></li>

                    <li><%= link_to ' ジャンル', admins_genres_path %></li>
                </ul>
            </nav>
            <nav class="nav navbar-nav navbar-search">
                  <form class="form-box">
                    <input class="form-input" type="search" placeholder="search">
                    <button class="form-button glyphicon glyphicon-search"></button>
                  </form>
            </nav>
        </div>
      </header>

    <% elsif customer_signed_in? %>

    <header class="navbar navbar-fixed-top">
      <div class="container">
          <nav class="nav navbar-nav navbar-left">
            <span>LOGO</span>
          </nav>

          <nav>
              <ul class="nav navbar-nav navbar-right">

            <li>ようこそ、<%= current_customer.email %>さん！</li>

                  <li><%= link_to 'マイページ', customer_path(current_customer), class: "btn btn-default" %></li>

                  <li><%= link_to ' 商品一覧', items_path, class: "btn btn-default" %></li>

                  <li><%= link_to 'カート', cart_items_path, class: "btn btn-default" %></li>

                  <li><a rel="nofollow" data-method="delete" href="/customers/sign_out", class="btn btn-default">ログアウト</a></li>
              </ul>
          </nav>
      </div>
    </header>

    <% else %>

    <header class="navbar navbar-fixed-top">
      <div class="container">
          <nav class="nav navbar-nav navbar-left">
              <span>LOGO</span>
          </nav>
          <nav>
              <ul class="nav navbar-nav navbar-right">
                  <li><%= link_to ' 商品一覧', items_path, class: "btn btn-default" %></li>

                  <li><a href="/customers/sign_up", class="btn btn-default">新規登録</a></li>

                  <li><a href="/customers/sign_in", class="btn btn-default">ログイン</a></li>
              </ul>
          </nav>
      </div>
    </header>

    <% end %>

    <%= yield %>
  </body>

</html>
