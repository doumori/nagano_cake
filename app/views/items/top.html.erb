          <% @rank_items.each do |rank_item| %>
            <div class="flex_rank_items">
              <%= link_to item_path(rank_item.item) do %>
                  <%= attachment_image_tag rank_item.item, :image, size: '200x200',format: "jpeg",fallback: "cake.png",class:"img-responsive" %>
                  <p><%= rank_item.name %></p>
                  <p><%= rank_item.price %>円(税込)</p>
              <% end %>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
  <div class="row">
    <%= link_to items_path do %>
      <div class="topimg-flex-5">
        <%= attachment_image_tag Item.find(5), :image, size: '300x180',format: "jpeg",fallback: "no_image.jpg" %>
        <%= attachment_image_tag Item.find(1), :image, size: '300x180',format: "jpeg",fallback: "no_image.jpg" %>
        <%= attachment_image_tag Item.find(3), :image, size: '300x180',format: "jpeg",fallback: "no_image.jpg" %>
        <%= attachment_image_tag Item.find(6), :image, size: '300x180',format: "jpeg",fallback: "no_image.jpg" %>
        <%= attachment_image_tag Item.find(4), :image, size: '300x180',format: "jpeg",fallback: "no_image.jpg" %>
      </div>
    <% end %>
  </div>
  <div class="row">
    <div class="col text-center">
      <span style="font-size:20px;"><%= link_to "商品一覧ページ",items_path %></span>
