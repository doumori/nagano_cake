<h4>商品一覧</h4>
（全<%=@items.count%>件）

<div class="flex_test-box">
	<% @items.each do |item| %>
  <div class="flex_test-item">
  	<%= link_to item_path(item) do %>
      <%= attachment_image_tag item, :image, :fill, 250, 200, format: 'jpeg', fallback: "cake.png", size:'250x200' %>
    <% end %>
  	<p><%= item.name %></p>
    <p><%= item.price * @tax %>(税込)</p>
  </div>
	<% end %>
</div>