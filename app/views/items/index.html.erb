<h4>商品一覧</h4>
（全<%=@items_all.count%>件）
<div class="items">


    <div class="col-xs-2">
      <%= render 'genres', genre: @genres %>
    </div>
       <div class="col-xs-10">
         <div class="flex_test-box">
          	<% @items.each do |item| %>
                	<%= link_to item_path(item) do %>
                <div class="flex_test-item">
                     <div class="flex_item-image">
                       <%= attachment_image_tag item, :image, size: '150x150',format: "jpeg",fallback: "no_image.jpg" %>
                     </div>
                  <% end %>
                    <p><%= item.name %></p>
                    <p><%= item.price %>(税込)</p>
              </div>
      	    <% end %>
    </div>
  </div>


    <div class='p-top__paginate'><%= paginate @items %></div>