<div class="items">
    <%=@items.count%>件）
    <div class="flex_test-box">
        <div class="col-xs-2">
          <%= render 'genres', genre: @genres %>
            <% @items.each do |item| %>
            <div class="flex_test-item">
                <%= link_to item_path(item) do %>
                <div class="item_image">
                    <%= attachment_image_tag item, :image, size: '200x200',format: "jpeg",fallback: "cake.png" %>
                </div>
                <% end %>
                <p>
                    <%= item.name %>
                </p>
                <p>
                    <%= item.price %>(税込)
                </p>
            </div>
        </div>
        <div class="col-xs-10">
            <% end %>
            <div class="flex_test-box"> </div>
            <% @items.each do |item| %>
            <%= paginate @items %>
            <%= link_to item_path(item) do %>
            <div class="flex_test-item">
                <div class="flex_item-image">
                    <%= attachment_image_tag item, :image, size: '150x150',format: "jpeg",fallback: "no_image.jpg" %>
                </div>
                <% end %>
                <p>
                    <%= item.name %>
                </p>
                <p>
                    <%= item.price %>(税込)
                </p>
            </div>
            <% end %>
        </div>
    </div>
    <div class='p-top__paginate'>
        <%= paginate @items %>
    </div>