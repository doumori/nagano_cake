<h2>ショッピングカート</h2>
<table class="table table-hover">
    <thead>
        <tr>
            <th>商品名</th>
            <th>単価(税込)</th>
            <th>数量</th>
            <th>小計</th>
        </tr>
    </thead>
    <tbody>
        <% @cart_items.each do |f| %>
        <tr>
            <td><%= f.item.name %></td>
            <td><%= f.item.price %></td>
              <%= form_with model: @cart_item do |s| %>
                <td><%= s.text_field :item_quantity, id:"quantity",placeholder: "個数表示" %><%= s.submit "変更" %></td>
              <% end %>
            <td><%= f.item.price * f.item_quantity %></td>
            <td><%= link_to "削除", cart_item_path(f.id),class:"btn btn-danger", method: :delete, data: {confirm: 'カートから削除しますか？'} %><td>
        </tr>
        <% end %>
    </tbody>
</table>
